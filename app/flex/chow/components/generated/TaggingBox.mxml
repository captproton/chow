<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Tagging"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import chow.models.Tagging;

    [Bindable]
    private var tagging:Tagging = new Tagging();

    private function newTagging():void {
      tagging = new Tagging();
      taggingsList.selectedIndex = -1;
    }

    private function saveTagging():void {
      updateModelProperties();
      if (tagging.id) {
        tagging.update({onSuccess: onTaggingUpdate});
      } else {
        tagging.create({onSuccess: onTaggingCreate});
      }
    }
  
    private function updateModelProperties():void {
      tagging.tagId = int(tagIdTextInput.text);
      tagging.taggableId = int(taggableIdTextInput.text);
      tagging.taggableType = taggableTypeTextInput.text;
      tagging.createdAt = createdAtDateTimeTextInput.date;
      tagging.updatedAt = updatedAtDateTimeTextInput.date;
  
    }
   
    private function destroyTagging():void {
      tagging.destroy({onSuccess: onTaggingDestroy});
    }
    
    private function onTaggingSelect():void {
      tagging = RxUtils.clone(taggingsList.selectedItem) as Tagging;
    }
    
    private function onTaggingCreate(result:Tagging):void {
      tagging = new Tagging;
    }
    
    private function onTaggingUpdate(result:Tagging):void {
      taggingsList.selectedItem = result;
      onTaggingSelect();
    }
    
    private function onTaggingDestroy(result:Tagging):void {
      onTaggingCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="taggingsPanel"
    title="Taggings" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="taggingsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(Tagging)}"
      change="onTaggingSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Tagging" width="100%" height="30"
        click="newTagging()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Tagging" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="TagId" width="100%">
        <mx:TextInput id="tagIdTextInput" width="100%" text="{tagging.tagId}"/>
      </mx:FormItem>
      <mx:FormItem label="TaggableId" width="100%">
        <mx:TextInput id="taggableIdTextInput" width="100%" text="{tagging.taggableId}"/>
      </mx:FormItem>
      <mx:FormItem label="TaggableType" width="100%">
        <mx:TextInput id="taggableTypeTextInput" width="100%" text="{tagging.taggableType}"/>
      </mx:FormItem>
      <mx:FormItem label="CreatedAt" width="100%">
        <rx:DateTimeTextInput id="createdAtDateTimeTextInput" width="200" date="{tagging.createdAt}"/>
      </mx:FormItem>
      <mx:FormItem label="UpdatedAt" width="100%">
        <rx:DateTimeTextInput id="updatedAtDateTimeTextInput" width="200" date="{tagging.updatedAt}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Tagging" width="50%" height="30"
        click="saveTagging()"/>
      <mx:Button label="Delete Tagging" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(tagging)}"
        click="destroyTagging()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>