<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Membership"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import chow.models.Membership;

    [Bindable]
    private var membership:Membership = new Membership();

    private function newMembership():void {
      membership = new Membership();
      membershipsList.selectedIndex = -1;
    }

    private function saveMembership():void {
      updateModelProperties();
      if (membership.id) {
        membership.update({onSuccess: onMembershipUpdate});
      } else {
        membership.create({onSuccess: onMembershipCreate});
      }
    }
  
    private function updateModelProperties():void {
      membership.siteId = int(siteIdTextInput.text);
      membership.userId = int(userIdTextInput.text);
      membership.createdAt = createdAtDateTimeTextInput.date;
      membership.updatedAt = updatedAtDateTimeTextInput.date;
      membership.admin = adminCheckBox.selected;
  
    }
   
    private function destroyMembership():void {
      membership.destroy({onSuccess: onMembershipDestroy});
    }
    
    private function onMembershipSelect():void {
      membership = RxUtils.clone(membershipsList.selectedItem) as Membership;
    }
    
    private function onMembershipCreate(result:Membership):void {
      membership = new Membership;
    }
    
    private function onMembershipUpdate(result:Membership):void {
      membershipsList.selectedItem = result;
      onMembershipSelect();
    }
    
    private function onMembershipDestroy(result:Membership):void {
      onMembershipCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="membershipsPanel"
    title="Memberships" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="membershipsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(Membership)}"
      change="onMembershipSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Membership" width="100%" height="30"
        click="newMembership()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Membership" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="SiteId" width="100%">
        <mx:TextInput id="siteIdTextInput" width="100%" text="{membership.siteId}"/>
      </mx:FormItem>
      <mx:FormItem label="UserId" width="100%">
        <mx:TextInput id="userIdTextInput" width="100%" text="{membership.userId}"/>
      </mx:FormItem>
      <mx:FormItem label="CreatedAt" width="100%">
        <rx:DateTimeTextInput id="createdAtDateTimeTextInput" width="200" date="{membership.createdAt}"/>
      </mx:FormItem>
      <mx:FormItem label="UpdatedAt" width="100%">
        <rx:DateTimeTextInput id="updatedAtDateTimeTextInput" width="200" date="{membership.updatedAt}"/>
      </mx:FormItem>
      <mx:FormItem label="Admin" width="100%">
        <mx:CheckBox id="adminCheckBox" selected="{membership.admin}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Membership" width="50%" height="30"
        click="saveMembership()"/>
      <mx:Button label="Delete Membership" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(membership)}"
        click="destroyMembership()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>