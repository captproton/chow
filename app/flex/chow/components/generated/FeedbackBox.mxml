<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Feedback"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import chow.models.Feedback;

    [Bindable]
    private var feedback:Feedback = new Feedback();

    private function newFeedback():void {
      feedback = new Feedback();
      feedbacksList.selectedIndex = -1;
    }

    private function saveFeedback():void {
      updateModelProperties();
      if (feedback.id) {
        feedback.update({onSuccess: onFeedbackUpdate});
      } else {
        feedback.create({onSuccess: onFeedbackCreate});
      }
    }
  
    private function updateModelProperties():void {
      feedback.siteId = int(siteIdTextInput.text);
      feedback.name = nameTextInput.text;
      feedback.email = emailTextInput.text;
      feedback.body = bodyTextArea.text;
      feedback.key = keyTextInput.text;
      feedback.createdAt = createdAtDateTimeTextInput.date;
      feedback.updatedAt = updatedAtDateTimeTextInput.date;
  
    }
   
    private function destroyFeedback():void {
      feedback.destroy({onSuccess: onFeedbackDestroy});
    }
    
    private function onFeedbackSelect():void {
      feedback = RxUtils.clone(feedbacksList.selectedItem) as Feedback;
    }
    
    private function onFeedbackCreate(result:Feedback):void {
      feedback = new Feedback;
    }
    
    private function onFeedbackUpdate(result:Feedback):void {
      feedbacksList.selectedItem = result;
      onFeedbackSelect();
    }
    
    private function onFeedbackDestroy(result:Feedback):void {
      onFeedbackCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="feedbacksPanel"
    title="Feedbacks" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="feedbacksList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(Feedback)}"
      change="onFeedbackSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Feedback" width="100%" height="30"
        click="newFeedback()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Feedback" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="SiteId" width="100%">
        <mx:TextInput id="siteIdTextInput" width="100%" text="{feedback.siteId}"/>
      </mx:FormItem>
      <mx:FormItem label="Name" width="100%">
        <mx:TextInput id="nameTextInput" width="100%" text="{feedback.name}"/>
      </mx:FormItem>
      <mx:FormItem label="Email" width="100%">
        <mx:TextInput id="emailTextInput" width="100%" text="{feedback.email}"/>
      </mx:FormItem>
      <mx:FormItem label="Body" width="100%">
        <mx:TextArea id="bodyTextArea" width="100%" height="200" text="{feedback.body}"/>
      </mx:FormItem>
      <mx:FormItem label="Key" width="100%">
        <mx:TextInput id="keyTextInput" width="100%" text="{feedback.key}"/>
      </mx:FormItem>
      <mx:FormItem label="CreatedAt" width="100%">
        <rx:DateTimeTextInput id="createdAtDateTimeTextInput" width="200" date="{feedback.createdAt}"/>
      </mx:FormItem>
      <mx:FormItem label="UpdatedAt" width="100%">
        <rx:DateTimeTextInput id="updatedAtDateTimeTextInput" width="200" date="{feedback.updatedAt}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Feedback" width="50%" height="30"
        click="saveFeedback()"/>
      <mx:Button label="Delete Feedback" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(feedback)}"
        click="destroyFeedback()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>