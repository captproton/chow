<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="AssignedSection"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import chow.models.AssignedSection;

    [Bindable]
    private var assignedSection:AssignedSection = new AssignedSection();

    private function newAssignedSection():void {
      assignedSection = new AssignedSection();
      assignedSectionsList.selectedIndex = -1;
    }

    private function saveAssignedSection():void {
      updateModelProperties();
      if (assignedSection.id) {
        assignedSection.update({onSuccess: onAssignedSectionUpdate});
      } else {
        assignedSection.create({onSuccess: onAssignedSectionCreate});
      }
    }
  
    private function updateModelProperties():void {
      assignedSection.articleId = int(articleIdTextInput.text);
      assignedSection.sectionId = int(sectionIdTextInput.text);
      assignedSection.position = int(positionTextInput.text);
      assignedSection.createdAt = createdAtDateTimeTextInput.date;
      assignedSection.updatedAt = updatedAtDateTimeTextInput.date;
  
    }
   
    private function destroyAssignedSection():void {
      assignedSection.destroy({onSuccess: onAssignedSectionDestroy});
    }
    
    private function onAssignedSectionSelect():void {
      assignedSection = RxUtils.clone(assignedSectionsList.selectedItem) as AssignedSection;
    }
    
    private function onAssignedSectionCreate(result:AssignedSection):void {
      assignedSection = new AssignedSection;
    }
    
    private function onAssignedSectionUpdate(result:AssignedSection):void {
      assignedSectionsList.selectedItem = result;
      onAssignedSectionSelect();
    }
    
    private function onAssignedSectionDestroy(result:AssignedSection):void {
      onAssignedSectionCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="assignedSectionsPanel"
    title="AssignedSections" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="assignedSectionsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(AssignedSection)}"
      change="onAssignedSectionSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New AssignedSection" width="100%" height="30"
        click="newAssignedSection()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit AssignedSection" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="ArticleId" width="100%">
        <mx:TextInput id="articleIdTextInput" width="100%" text="{assignedSection.articleId}"/>
      </mx:FormItem>
      <mx:FormItem label="SectionId" width="100%">
        <mx:TextInput id="sectionIdTextInput" width="100%" text="{assignedSection.sectionId}"/>
      </mx:FormItem>
      <mx:FormItem label="Position" width="100%">
        <mx:TextInput id="positionTextInput" width="100%" text="{assignedSection.position}"/>
      </mx:FormItem>
      <mx:FormItem label="CreatedAt" width="100%">
        <rx:DateTimeTextInput id="createdAtDateTimeTextInput" width="200" date="{assignedSection.createdAt}"/>
      </mx:FormItem>
      <mx:FormItem label="UpdatedAt" width="100%">
        <rx:DateTimeTextInput id="updatedAtDateTimeTextInput" width="200" date="{assignedSection.updatedAt}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save AssignedSection" width="50%" height="30"
        click="saveAssignedSection()"/>
      <mx:Button label="Delete AssignedSection" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(assignedSection)}"
        click="destroyAssignedSection()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>