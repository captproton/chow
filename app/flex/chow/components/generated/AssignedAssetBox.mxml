<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="AssignedAsset"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import chow.models.AssignedAsset;

    [Bindable]
    private var assignedAsset:AssignedAsset = new AssignedAsset();

    private function newAssignedAsset():void {
      assignedAsset = new AssignedAsset();
      assignedAssetsList.selectedIndex = -1;
    }

    private function saveAssignedAsset():void {
      updateModelProperties();
      if (assignedAsset.id) {
        assignedAsset.update({onSuccess: onAssignedAssetUpdate});
      } else {
        assignedAsset.create({onSuccess: onAssignedAssetCreate});
      }
    }
  
    private function updateModelProperties():void {
      assignedAsset.articleId = int(articleIdTextInput.text);
      assignedAsset.assetId = int(assetIdTextInput.text);
      assignedAsset.position = int(positionTextInput.text);
      assignedAsset.label = labelTextInput.text;
      assignedAsset.active = activeCheckBox.selected;
      assignedAsset.createdAt = createdAtDateTimeTextInput.date;
      assignedAsset.updatedAt = updatedAtDateTimeTextInput.date;
  
    }
   
    private function destroyAssignedAsset():void {
      assignedAsset.destroy({onSuccess: onAssignedAssetDestroy});
    }
    
    private function onAssignedAssetSelect():void {
      assignedAsset = RxUtils.clone(assignedAssetsList.selectedItem) as AssignedAsset;
    }
    
    private function onAssignedAssetCreate(result:AssignedAsset):void {
      assignedAsset = new AssignedAsset;
    }
    
    private function onAssignedAssetUpdate(result:AssignedAsset):void {
      assignedAssetsList.selectedItem = result;
      onAssignedAssetSelect();
    }
    
    private function onAssignedAssetDestroy(result:AssignedAsset):void {
      onAssignedAssetCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="assignedAssetsPanel"
    title="AssignedAssets" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="assignedAssetsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(AssignedAsset)}"
      change="onAssignedAssetSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New AssignedAsset" width="100%" height="30"
        click="newAssignedAsset()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit AssignedAsset" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="ArticleId" width="100%">
        <mx:TextInput id="articleIdTextInput" width="100%" text="{assignedAsset.articleId}"/>
      </mx:FormItem>
      <mx:FormItem label="AssetId" width="100%">
        <mx:TextInput id="assetIdTextInput" width="100%" text="{assignedAsset.assetId}"/>
      </mx:FormItem>
      <mx:FormItem label="Position" width="100%">
        <mx:TextInput id="positionTextInput" width="100%" text="{assignedAsset.position}"/>
      </mx:FormItem>
      <mx:FormItem label="Label" width="100%">
        <mx:TextInput id="labelTextInput" width="100%" text="{assignedAsset.label}"/>
      </mx:FormItem>
      <mx:FormItem label="Active" width="100%">
        <mx:CheckBox id="activeCheckBox" selected="{assignedAsset.active}"/>
      </mx:FormItem>
      <mx:FormItem label="CreatedAt" width="100%">
        <rx:DateTimeTextInput id="createdAtDateTimeTextInput" width="200" date="{assignedAsset.createdAt}"/>
      </mx:FormItem>
      <mx:FormItem label="UpdatedAt" width="100%">
        <rx:DateTimeTextInput id="updatedAtDateTimeTextInput" width="200" date="{assignedAsset.updatedAt}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save AssignedAsset" width="50%" height="30"
        click="saveAssignedAsset()"/>
      <mx:Button label="Delete AssignedAsset" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(assignedAsset)}"
        click="destroyAssignedAsset()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>