<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Tag"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import chow.models.Tag;

    [Bindable]
    private var tag:Tag = new Tag();

    private function newTag():void {
      tag = new Tag();
      tagsList.selectedIndex = -1;
    }

    private function saveTag():void {
      updateModelProperties();
      if (tag.id) {
        tag.update({onSuccess: onTagUpdate});
      } else {
        tag.create({onSuccess: onTagCreate});
      }
    }
  
    private function updateModelProperties():void {
      tag.name = nameTextInput.text;
      tag.createdAt = createdAtDateTimeTextInput.date;
      tag.updatedAt = updatedAtDateTimeTextInput.date;
  
    }
   
    private function destroyTag():void {
      tag.destroy({onSuccess: onTagDestroy});
    }
    
    private function onTagSelect():void {
      tag = RxUtils.clone(tagsList.selectedItem) as Tag;
    }
    
    private function onTagCreate(result:Tag):void {
      tag = new Tag;
    }
    
    private function onTagUpdate(result:Tag):void {
      tagsList.selectedItem = result;
      onTagSelect();
    }
    
    private function onTagDestroy(result:Tag):void {
      onTagCreate(result);
    }    
  ]]></mx:Script>
  <mx:Panel id="tagsPanel"
    title="Tags" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="tagsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(Tag)}"
      change="onTagSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Tag" width="100%" height="30"
        click="newTag()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Tag" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid"
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="Name" width="100%">
        <mx:TextInput id="nameTextInput" width="100%" text="{tag.name}"/>
      </mx:FormItem>
      <mx:FormItem label="CreatedAt" width="100%">
        <rx:DateTimeTextInput id="createdAtDateTimeTextInput" width="200" date="{tag.createdAt}"/>
      </mx:FormItem>
      <mx:FormItem label="UpdatedAt" width="100%">
        <rx:DateTimeTextInput id="updatedAtDateTimeTextInput" width="200" date="{tag.updatedAt}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Tag" width="50%" height="30"
        click="saveTag()"/>
      <mx:Button label="Delete Tag" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(tag)}"
        click="destroyTag()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>